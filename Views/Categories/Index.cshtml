@model IEnumerable<CS_Web_Core_MVC_Northwind.Models.CategoriesModel>

@{
    ViewData["Title"] = "類別";
}

<h1>類別</h1>

<p>
    <a asp-action="Create">新增</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.Picture)*@
            </td>
            <td class="text-nowrap">
                <a asp-action="Edit" asp-route-id="@item.CategoryID">編輯</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryID">內容</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryID">刪除</a>
            </td>
        </tr>
}
    </tbody>
</table>
